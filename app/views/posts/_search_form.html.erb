<%= form_tag posts_search_path, method: "get", class: "header_item search_form" do %>
  <%= text_field_tag :keyword, @keyword, class: "keyword form-control", placeholder: "search posts..." %>
  <%= button_tag type: "submit", class: "btn btn-info" do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>